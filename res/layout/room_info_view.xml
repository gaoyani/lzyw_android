<com.huiwei.roomreservation.view.RoomInfoView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:background="@drawable/info_bg" >

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="100dp"
            android:layout_height="65dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/default_icon"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/layout_price"
            android:layout_toRightOf="@+id/iv_icon"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上岛咖啡-牡丹园店"
                android:textColor="#ff3f3f3f"
                android:textSize="@dimen/size_15sp"
                android:textStyle="bold" />
            
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/tv_room_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="包间A:"
                android:textColor="#ff6f6f6f"
                android:textSize="@dimen/size_13sp" />

            <TextView
                android:id="@+id/tv_room_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="8人 带车位"
                android:textColor="#ff3f3f3f"
                android:textSize="@dimen/size_13sp" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layout_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp" >

                <TextView
                    android:id="@+id/tv_phone_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系电话："
                    android:textColor="#ff6f6f6f"
                    android:textSize="@dimen/size_13sp" />

                <TextView
                    android:id="@+id/tv_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_phone_title"
                    android:layout_toRightOf="@+id/tv_phone_title"
                    android:text="13000000000"
                    android:textColor="#ff3f3f3f"
                    android:textSize="@dimen/size_13sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_room_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="￥50"
                android:textColor="#ffff4a4a"
                android:textSize="@dimen/size_13sp"
                android:textStyle="bold" />
            
            <TextView
                android:id="@+id/tv_price_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="预订费"
                android:textColor="#ff6f6f6f"
                android:textSize="@dimen/size_13sp" />

        </LinearLayout>

</com.huiwei.roomreservation.view.RoomInfoView>