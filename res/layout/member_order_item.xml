<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff" >

    <RelativeLayout
        android:id="@+id/layout_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/comment_item_bg"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp" >

                <TextView
                    style="@style/store_info"
                    android:text="订单号    ：" />

                <TextView
                    android:id="@+id/tv_order_id"
                    style="@style/store_info"
                    android:text="1111111111111"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_order_time"
                    style="@style/store_info"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="2014-08-18 11:15"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/store_info"
                    android:text="商户名称：" />

                <TextView
                    android:id="@+id/tv_store_name"
                    style="@style/store_info"
                    android:text="12"
                    android:textColor="#ff000000"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/store_info"
                    android:text="联系电话：" />

                <TextView
                    android:id="@+id/tv_phone_number"
                    style="@style/store_info"
                    android:text="12"
                    android:textColor="#ff000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/store_info"
                    android:text="订单详情：" />

                <TextView
                    android:id="@+id/tv_order_info"
                    style="@style/store_info"
                    android:layout_marginRight="50dp"
                    android:ellipsize="end"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="海淀区花园东路25号中辰写字楼1楼（牡丹宾馆北）"
                    android:textColor="#ff000000" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="已完成"
            android:textColor="#ff000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="￥35"
            android:textColor="@color/highlight_text"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_info"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="1dp"
        android:background="@color/comment_item_bg"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="3dp" >

        <Button
            android:id="@+id/btn_1"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textColor="#ffffffff"
            android:focusable="false"
            android:layout_marginLeft="2dp" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textColor="#ffffffff"
            android:focusable="false"
            android:layout_marginLeft="2dp" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textColor="#ffffffff"
            android:focusable="false"
            android:layout_marginLeft="2dp" />
    </LinearLayout>

</RelativeLayout>
