<com.huiwei.roomreservation.view.PhoneOrderConfirmView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@color/pop_dialog_bg"
    android:minWidth="280dp" >
    
    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/pop_dialog_title_bg" >
    
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/dialog_info_icon" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_icon"
        android:text="汇为乐汇"
        android:textColor="#ffffffff"
        android:textSize="22sp"
        android:textStyle="bold" />
    
    </RelativeLayout>
    
    <ImageView
        android:id="@+id/iv_title_splite"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/layout_title"
        android:background="#ffff8500" />
    
    <TextView
        android:id="@+id/tv_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_title_splite"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="是否提交所填信息？"
        android:textColor="#ff000000"
        android:textSize="17sp" />
    
    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_info_title"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:textColor="#ff000000"
        android:textSize="14sp" />
    
    <ImageView
        android:id="@+id/iv_button_splite"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_info"
        android:layout_marginTop="10dp"
        android:background="#ffffffff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/iv_button_splite"
        android:orientation="horizontal" >

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/button_pop_dialog_selector"
        android:text="取消"
        android:textColor="#ff000000"
        android:textSize="14sp" />
    
    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#ffffffff" />
    
    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/button_pop_dialog_selector"
        android:text="确定"
        android:textColor="#ff000000"
        android:textSize="14sp" />

    </LinearLayout>

</com.huiwei.roomreservation.view.PhoneOrderConfirmView>